-var page = about
include ../module/_locale
doctype html
html(lang=locale)
    include ../module/_head
    body
        include ../module/_header
        main.About
            .About__header
                h1.About__headerTitle(data-aos='fade-up',data-aos-delay="500") #{about.name}
                .Scroll(data-aos='zoom-in', data-aos-delay="1500",data-aos-anchor-placement="top-bottom")
            .About__main
                section.Hi
                    .Hi__inner
                        .Hi__content
                            h2.Hi__contentTitle(data-aos='fade-right') #{about.hiTitle}
                            p.Hi__contentText(data-aos='fade-up') #{about.hiText}
                        .Hi__visual
                            p.Hi__visualImg(data-aos='zoom-in')
                                img(src=`${meta.rootDir}asset/images/about_img_hi.png`)
                section.What
                    .What__inner
                        h2.What__title #{about.whatTitle}
                        section.What__designer
                            .What__designerContent
                                h3.What__designerContentTitle(data-aos='zoom-in') #{about.whatDesignerTitle}
                                p.What__designerContentText(data-aos='fade-up') #{about.whatDesignerText}
                            .What__designerVisual
                                p.What__designerVisualImg(data-aos='zoom-in')
                                    img(src=`${meta.rootDir}asset/images/about_icon_designer.png`)
                        section.What__developer
                            .What__developerContent
                                h3.What__developerContentTitle(data-aos='zoom-in') #{about.whatDeveloperTitle}
                                p.What__developerContentText(data-aos='fade-up') #{about.whatDeveloperText}
                            .What__developerVisual
                                p.What__developerVisualImg(data-aos='zoom-in')
                                    img(src=`${meta.rootDir}asset/images/about_icon_developer.png`)
                        section.What__gamer
                            .What__gamerContent
                                h3.What__gamerContentTitle(data-aos='zoom-in') #{about.whatGamerTitle}
                                p.What__gamerContentText(data-aos='fade-up') #{about.whatGamerText}
                            .What__gamerVisual
                                p.What__gamerVisualImg(data-aos='zoom-in')
                                    img(src=`${meta.rootDir}asset/images/about_icon_gamer.png`)
                section.Skillset
                    .Skillset__inner
                        h2.Skillset__title(data-aos='zoom-in') #{about.skillsetTitle}
                        dl.Skillset__list
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--html
                                    span HTML
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--html
                                    span 90
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--css
                                    span CSS
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--css
                                    span 90
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--wordpress
                                    span WordPress
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--wordpress
                                    span 85
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--sass
                                    span Sass
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--sass
                                    span 80
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--pug
                                    span Pug
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--pug
                                    span 80
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--ui
                                    span UI Design
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--ui
                                    span 80
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--ux
                                    span UX Design
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--ux
                                    span 75
                            .Skillset__listItem(data-aos='fade-up')
                                dt.Skillset__listItemTitle
                                    span.Skillset__listItemTitleIcon.Skillset__listItemTitleIcon--php
                                    span PHP
                                dd.Skillset__listItemScore
                                    span.Skillset__listItemScoreBar
                                        span.Skillset__listItemScoreBarGauge.Skillset__listItemScoreBarGauge--php
                                    span 50
                section.Software
                    h2.Software__title(data-aos='zoom-in') #{about.softwareTitle}
                    ul.Software__list
                        li.Software__listItem.Software__listItem--photoshop(data-aos='fade-up') Photoshop
                        li.Software__listItem.Software__listItem--illustrator(data-aos='fade-up') Illustrator
                        li.Software__listItem.Software__listItem--dreamweaver(data-aos='fade-up') Dreamweaver
                        li.Software__listItem.Software__listItem--indesign(data-aos='fade-up') Indesign
                        li.Software__listItem.Software__listItem--adobeXd(data-aos='fade-up') Adobe XD
                        li.Software__listItem.Software__listItem--sketch(data-aos='fade-up') Sketch
                        li.Software__listItem.Software__listItem--vsCode(data-aos='fade-up') VS Code
                        li.Software__listItem.Software__listItem--slack(data-aos='fade-up') Slack
                        li.Software__listItem.Software__listItem--discord(data-aos='fade-up') Discord
                        li.Software__listItem.Software__listItem--skype(data-aos='fade-up') Skype
            .About__footer
                ol.Breadcrumb(itemscope='', itemtype='https://schema.org/BreadcrumbList')
                    li.Breadcrumb__item
                        a.Breadcrumb__itemLink.Breadcrumb__itemLink--home(href=`${meta.rootDir + home.langLink}`)
                            span.Breadcrumb__itemLinkText.Breadcrumb__itemLinkText--home Home
                    span.Breadcrumb__item.Breadcrumb__item--right â€º
                    li.Breadcrumb__item(itemprop='itemListElement', itemscope='', itemtype='https://schema.org/ListItem')
                        a.Breadcrumb__itemLink(itemtype='https://schema.org/Thing', itemprop='item', href=`${meta.rootDir + about.langLink}`)
                            span.Breadcrumb__itemLinkText(itemprop='name') #{about.name}
                        meta(itemprop='position', content='1')
        include ../module/_footer
        include ../module/_script
