-var page = works
include ../module/_locale
doctype html
html(lang=locale)
    include ../module/_head
    body
        include ../module/_header
        main.Works
            .Works__header
                h1.Works__headerTitle(data-aos='fade-up',data-aos-delay="500") Works
                .Scroll(data-aos='zoom-in', data-aos-delay="1000",data-aos-anchor-placement="top-bottom")
            .Works__main
                .Archive
                    ul.Archive__list
                        li.Archive__listItem(data-aos='fade-up')
                            .Archive__listItemContent
                                h2.Archive__listItemContentTitle #{appCookshot.name}
                                p.Archive__listItemContentType
                                    span.Archive__listItemContentTypeText #{appCookshot.typeText}
                                p.Archive__listItemContentDescription #{appCookshot.description}
                                p.Archive__listItemContentMore
                                    a.Archive__listItemContentMoreLink(href=`${meta.rootDir + appCookshot.langLink}`) #{works.more}
                            .Archive__listItemVisual
                                img.Archive__listItemVisualImg(src=`${meta.rootDir}asset/images/works/app/cookshot/cookshot_thumnail.png`)
                        li.Archive__listItem(data-aos='fade-up')
                            .Archive__listItemContent
                                h2.Archive__listItemContentTitle #{webBusica.name}
                                p.Archive__listItemContentType
                                    span.Archive__listItemContentTypeText #{webBusica.typeText}
                                p.Archive__listItemContentDescription #{webBusica.description}
                                p.Archive__listItemContentMore
                                    a.Archive__listItemContentMoreLink(href=`${meta.rootDir + webBusica.langLink}`) #{works.more}
                            .Archive__listItemVisual
                                img.Archive__listItemVisualImg(src=`${meta.rootDir}asset/images/works/web/busica/busica_thumnail.png`)
                        li.Archive__listItem(data-aos='fade-up')
                            .Archive__listItemContent
                                h2.Archive__listItemContentTitle #{webAstlanox.name}
                                p.Archive__listItemContentType
                                    span.Archive__listItemContentTypeText #{webAstlanox.typeText}
                                p.Archive__listItemContentDescription #{webAstlanox.description}
                                p.Archive__listItemContentMore
                                    a.Archive__listItemContentMoreLink(href=`${meta.rootDir + webAstlanox.langLink}`) #{works.more}
                            .Archive__listItemVisual
                                img.Archive__listItemVisualImg(src=`${meta.rootDir}asset/images/works/web/astlanox/astlanox_thumnail.png`)
                        li.Archive__listItem(data-aos='fade-up')
                            .Archive__listItemContent
                                h2.Archive__listItemContentTitle #{appBusica.name}
                                p.Archive__listItemContentType
                                    span.Archive__listItemContentTypeText #{appBusica.typeText}
                                p.Archive__listItemContentDescription #{appBusica.description}
                                p.Archive__listItemContentMore
                                    a.Archive__listItemContentMoreLink(href=`${meta.rootDir + appBusica.langLink}`) #{works.more}
                            .Archive__listItemVisual
                                img.Archive__listItemVisualImg(src=`${meta.rootDir}asset/images/works/app/busica/busica_thumnail.png`)
                        li.Archive__listItem(data-aos='fade-up')
                            .Archive__listItemContent
                                h2.Archive__listItemContentTitle #{otherInfuse.name}
                                p.Archive__listItemContentType
                                    span.Archive__listItemContentTypeText #{otherInfuse.typeText}
                                p.Archive__listItemContentDescription #{otherInfuse.description}
                                p.Archive__listItemContentMore
                                    a.Archive__listItemContentMoreLink(href=`${meta.rootDir + otherInfuse.langLink}`) #{works.more}
                            .Archive__listItemVisual
                                img.Archive__listItemVisualImg(src=`${meta.rootDir}asset/images/works/other/infuse/infuse_thumnail.png`)
            .Works__footer
                ol.Breadcrumb(itemscope='', itemtype='https://schema.org/BreadcrumbList')
                    li.Breadcrumb__item
                        a.Breadcrumb__itemLink.Breadcrumb__itemLink--home(href=`${meta.rootDir + home.langLink}`)
                            span.Breadcrumb__itemLinkText.Breadcrumb__itemLinkText--home Home
                    span.Breadcrumb__item.Breadcrumb__item--right â€º
                    li.Breadcrumb__item(itemprop='itemListElement', itemscope='', itemtype='https://schema.org/ListItem')
                        a.Breadcrumb__itemLink(itemtype='https://schema.org/Thing', itemprop='item', href=`${meta.rootDir + works.langLink}`)
                            span.Breadcrumb__itemLinkText(itemprop='name') #{works.name}
                        meta(itemprop='position', content='1')
        include ../module/_footer
        include ../module/_script
